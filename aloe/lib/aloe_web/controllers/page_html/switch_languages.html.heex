<div class="btn-group" role="group" aria-label="Switch languages">
  <%= for {k, v} <- %{"en-US": "English", "zh-Hans": "简体中文", "zh-Hant": "繁體中文"} do %>
    <%= if k == String.to_atom(@locale) do %>
      <button type="button" class="btn btn-outline-primary"><%= v %></button>
    <% else %>
      <button type="button" class="btn btn-outline-secondary">
        <%= v %>
      </button>
    <% end %>
  <% end %>
</div>
